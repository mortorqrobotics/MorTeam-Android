<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.team1515.morteam" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="net.team1515.morteam.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="org.team1515.morteam.MorTeam">

        <activity
            android:name="org.team1515.morteam.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.team1515.morteam.activity.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name="org.team1515.morteam.activity.RegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name="org.team1515.morteam.activity.ProfileActivity"
            android:label="@string/app_name" />
        <activity
            android:name="org.team1515.morteam.activity.JoinTeamActivity"
            android:label="@string/app_name" />
        <activity
            android:name="org.team1515.morteam.activity.SubdivisionActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="org.team1515.morteam.activity.ChatActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
